<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1080">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="18"/>

        </Style>
        <Style TargetType="Grid">

        </Style>
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="ItemSelect" Background="CadetBlue" Click="ItemSelect_Click">Item Selection</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button x:Name="CancelOrder" Click="CancelOrder_Click" Background="Yellow">Cancel order</Button>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Button x:Name="CompleteOrder" Click="CompleteOrder_Click" Background="LawnGreen">Complete Order</Button>
        </StackPanel>

    </Grid>
</UserControl>
