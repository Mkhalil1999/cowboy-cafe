<UserControl x:Class="PointOfSale.CustomizeCowPokeChilli"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="25">Customize CowPoke Chilli</TextBlock>
            <StackPanel>
                <CheckBox x:Name="GreenOnions" IsChecked="{Binding Path=GreenOnions}">Green Onions</CheckBox>
                <CheckBox x:Name="Cheese" IsChecked="{Binding Path=Cheese}"> Cheese </CheckBox>
                <CheckBox x:Name="TortillaStrips" IsChecked="{Binding Path=TortillaStrips}"> Tortilla Strips</CheckBox>
                <CheckBox x:Name="SourCream" IsChecked="{Binding Path=SourCream}"> Sour Cream</CheckBox>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
